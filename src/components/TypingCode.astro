---
export interface Props {
    command: string
}

const { command = "placeholder" } = Astro.props;
---
<style>
    /* GLOBAL STYLES */
    body {
        background: #333;
        padding-top: 5em;
        display: flex;
        flex-direction: column;
        justify-content: left;
    }

    /* DEMO-SPECIFIC STYLES */
    .typewriter {
        width: 100%;
        color: #fff;
        font-family: monospace;
        height: auto;
        padding: 1em;
        font-size: 2em;
        background-color: #000;

    }
    .background {
        width: 100%;
        background-color: #000;
    }

    /* The typing effect */
    @keyframes typing {
        from { width: 0 }
        to { width: fit-content }
    }

    /* The typewriter cursor effect */
    @keyframes blink-caret {
        from, to { border-color: transparent }
        50% { border-color: orange }
    }
</style>
<script define:vars={{command}}>
    import TypeIt from "typeit";
    new TypeIt("#codeing", {
        strings: command
    }).go();
</script>
<div class="flex flex-row">
    <h1 class="w-fit mr-3">> </h1>
    <h1 id="codeing" class="w-fit"></h1>
</div>