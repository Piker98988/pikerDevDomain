---
export interface Props {
    title: string,
    content: string,
    image: string,
}

const { title, content, image = "placeholder.png" } = Astro.props;
---
<!--
This component is a layout with a title, a paragraph, and an image aligned to the left:
-----------
┌──────────────────────────────────┐
│                                  │        TITLE TITLE TITLE TITLE TITLE
│                                  │        TITLE TITLE TITLE TITLE TITLE
│                                  │
│                                  │    paragraph paragraph paragraph paragraph
│         this is an image         │    paragraph paragraph paragraph paragraph
│                                  │    paragraph paragraph paragraph paragraph
│                                  │    paragraph paragraph paragraph paragraph
│                                  │    paragraph paragraph paragraph paragraph
│                                  │    paragraph paragraph paragraph paragraph
│                                  │
└──────────────────────────────────┘
----------
-->
<style>
    .head3 {
        padding-top: 5px;
        font-size: xxx-large;
        color: #A8A2A2;
        text-align: center;
        font-family: "Anonymous pro", monospace;
    }
    .par {
        color: #A8A2A2;
        font-family: "Montserrat", sans-serif;
        margin-left: 1.25rem;
        margin-right: 1.25rem;
    }
    .image {
        width: 80%;
        max-height: 30.25rem;
        max-width: 30.25rem;
        align-content: center;

    }
    .column {
        display: flex;
        flex-direction: column;
        direction: ltr;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="grid grid-cols-2 gap-5 m-6">
    <div class="column">
        <img src={ image } class="image" alt="photo of piker"/>
    </div>
    <div class="column">
        <h3 class="head3 ml-5 mr-5">{ title }</h3>
        <p class="par">
            { content }
        </p>
    </div>
</div>